#include <stdio.h>
#include <stdbool.h>
int main()
{
    int first;
    int second;
    char mode;
    printf("Example computation\n2 space + space 4 = 6\nOnly use +,-,*,/\n");  
    while(true)
    {
        scanf("%d %c %d", &first, &mode, &second);
        if(mode=='+')
        {
           printf("Answer:%d\n", first+second);
        }
        else if(mode=='-')
        {
            printf("Answer:%d\n", first-second);
        }
        else if(mode=='*')
        {
            printf("Answer:%d\n", first*second);
        }
        else if(mode=='/')
        {
            printf("Answer:%d\n", first/second);
        }
        else
        {
            printf("moderator not found\n");
        }
    }
    return 0;    
}





